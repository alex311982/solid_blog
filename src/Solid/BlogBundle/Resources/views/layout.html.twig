<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <title>{% block title %}{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('bundles/solidblog/css/main.css') }}" type="text/css" rel="stylesheet" />
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>
    {% endblock %}
    {% block scripts %}
        <script src="{{ asset('bundles/solidblog/js/main.js') }}"></script>
    {% endblock %}
</head>
<body>

    <div id="demo-notice">
        made using Symfony2
    </div>

    <section id="wrapper">
        <header id="header">
            <div class="top">
                <nav>
                    <ul class="navigation">
                        {% if app.user %}
                            <li>Logged as {{ app.user.username }}</li>
                        {% endif %}
                        <li><a href="/">Home</a></li>
                        {% if app.user %}
                            <li><a href="/logout">Logout</a></li>
                            <li><a href="/create">Add article</a></li>
                        {% else %}
                            <li><a href="/login">Login</a></li>
                            <li><a href="/register">Registration</a></li>
                        {% endif %}
                    </ul>
                </nav>
            </div>

            <hgroup>
                <h2><a href="/">Solid blog </a></h2>
            </hgroup>
        </header>

        {% block content %}{% endblock %}
    </section>

</body>
</html>